<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_menu_nav_graph"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="edu.upb.coderangersandroid.ui.mainpage.tabs.feed.FeedFragment"
        android:label="FeedFragment"
        tools:layout="@layout/fragment_feed">
        <action
            android:id="@+id/action_go_to_post_service_detail"
            app:destination="@id/postServiceDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/postServiceDetailFragment"
        android:name="edu.upb.coderangersandroid.ui.mainpage.tabs.feed.fragments.PostServiceDetailFragment"
        android:label="PostServiceDetailFragment"
        tools:layout="@layout/fragment_service_details">
        <argument
            android:name="post"
            app:argType="edu.upb.coderangersandroid.model.Post" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="edu.upb.coderangersandroid.ui.mainpage.tabs.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/storeFragment"
        android:name="edu.upb.coderangersandroid.ui.mainpage.tabs.store.StoreFragment"
        android:label="fragment_store"
        tools:layout="@layout/fragment_store" >
        <action
            android:id="@+id/action_storeFragment_to_storeItemDetailsFragment"
            app:destination="@id/storeItemDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/storeItemDetailsFragment"
        android:name="edu.upb.coderangersandroid.ui.mainpage.tabs.store.StoreItemDetailsFragment"
        android:label="StoreItemDetailsFragment"
        tools:layout="@layout/fragment_store_item_details">
        <argument
            android:name="product"
            app:argType="edu.upb.coderangersandroid.model.Product"/>
    </fragment>

</navigation>