<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorPrimary">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:text="@string/app_name"
        android:textColor="?attr/colorOnSurface"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <FrameLayout
        android:id="@+id/containerLoginOptions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageFacebook"
            android:layout_width="340dp"
            android:layout_height="97dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="195dp"
            android:layout_marginRight="195dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/box" />

        <ImageView
            android:id="@+id/imageGoogle"
            android:layout_width="340dp"
            android:layout_height="97dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="32dp"
            app:srcCompat="@drawable/box" />

        <ImageView
            android:id="@+id/imageTwitter"
            android:layout_width="340dp"
            android:layout_height="97dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="190dp"
            android:layout_marginRight="32dp"
            app:srcCompat="@drawable/box" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="328dp"
            android:layout_height="35dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="50dp"
            android:text="SignUpWithFacebook"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="328dp"
            android:layout_height="35dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="132dp"
            android:layout_marginRight="50dp"
            android:text="SignUpWithGoogle"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="328dp"
            android:layout_height="35dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="222dp"
            android:layout_marginRight="50dp"
            android:text="SignUpWithTwitter"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="73dp"
            android:layout_height="61dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/facebook" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="51dp"
            android:layout_height="59dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="115dp"
            app:srcCompat="@drawable/google" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="65dp"
            android:layout_height="57dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="205dp"
            app:srcCompat="@drawable/twitter" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>